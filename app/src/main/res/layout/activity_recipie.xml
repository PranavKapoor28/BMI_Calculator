<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"

    android:orientation="vertical">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="CHEAT DAY RECIPIES"
        android:textColor="#FCFDF9F9"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="5dp"
        android:elevation="22sp"
        android:id="@+id/list1"
        android:background="@drawable/listcolour"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/milkimage"
            android:layout_width="162dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/pizza" />

        <TextView
            android:id="@+id/milk"
            android:layout_width="240dp"
            android:layout_height="274dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Pizza"
            android:textColor="#F8F6F6"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"></View>

    <LinearLayout
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_margin="5dp"
        android:background="@drawable/listcolour"
        android:elevation="22sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/riceImage"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/pasta" />

        <TextView
            android:id="@+id/rice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Pasta"
            android:textColor="#F8F6F6"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        android:elevation="22sp"></View>

    <LinearLayout
        android:id="@+id/list3"
        android:layout_width="398dp"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:elevation="22sp"
        android:background="@drawable/listcolour"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nutsImage"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            app:srcCompat="@drawable/burger" />

        <TextView
            android:id="@+id/Nuts"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="Burger"
            android:textColor="#F8F6F6"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>




</LinearLayout>